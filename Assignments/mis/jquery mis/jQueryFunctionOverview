$(document).ready(function() {
         $('.appendbutton').click(function() {
           $('.appendtext').append(' javascript library. ')
         });
         $(".attribute").click(function(){
             $("img").attr("width", "400");
         });
      $(document).ready(function() {
         $('.hidebutton').click(function() {
           $('.hideshowtext').hide()
         });
         $('.showbutton').click(function() {
           $('.hideshowtext').show()
         });
         $('.toggle').click(function() {
             $('.toggle').toggle()
         });
         $('.slideToggle').click(function() {
             $('.slideToggle').slideToggle()
         });
         $('.hidebutton').click(function() {
           $('.hideshowtext').hide()
         });
         $('.showbutton').click(function() {
           $('.hideshowtext').show()
         });
         $('.fadeInbutton').click(function() {
           $('.fadetext').fadeIn()
         });
         $('.fadeOutbutton').click(function() {
           $('.fadetext').fadeOut()
         });
         $('.slideUp').click(function() {
           $('.slidedir').slideUp()
            });
         $('.slideDown').click(function() {
           $('.slidedir').slideDown()
           });
           $('.addClass').click(function() {
             $('.addremove').addClass('class')
           });
           $('.removeClass').click(function() {
             $('.addremove').removeClass('class')
           });
            $('.before').click(function() {
                 $('.beforeafter').before('<h5>before<\/h5>')
             });
             $('.after').click(function() {
               $('.beforeafter').after('<h5>after<\/h5>')
             });
             $('.text').click(function() {
               $('.settext').text('This is a new text.')
             });
             $('.html').click(function() {
               $('.html').html(' <em>New message-overwrite previous content.<\/em> ')
             });
             $("#btn1").click(function(){
                 $("div").data("greeting", "Hello World");
             });
           $("#btn2").click(function(){
               alert($("div").data("greeting"));

         });
        });
    });

//]]>
</script>
</head>

